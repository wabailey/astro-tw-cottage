---
import Button from "./Button.astro";

const apiKey = import.meta.env.API_KEY;
---

<div id="location" class="relative">
  <div class="absolute w-full h-full bg-light-yellow top-0 left-0 -mb-20 -z-10">
  </div>
  <div
    class="hidden laptop:block absolute -bottom-20 left-0 right-0 bg-light-yellow w-full h-full"
  >
  </div>

  <div class="relative max-w-[1296px] w-full mx-auto z-10">
    <div
      class="relative overflow-hidden box-border bg-dark-blue max-w-[600px] w-[90%] mx-auto py-8 px-4 border-8 border-dark-blue shadow-[inset_0_0_0_2px] shadow-light-blue laptop:absolute laptop:left-0 laptop:top-0 laptop:w-1/2 laptop:ml-0 laptop:px-[5%] laptop:py-12"
    >
      <div class="absolute -bottom-12 -right-12 pointer-events-none">
        <img
          src="./assets/beach-svgs/compass-1.svg"
          class="w-[320px] tablet:w-[420px] laptop:w-[320px] desktop:w-[420px]"
        />
      </div>

      <h2
        class="text-h2-sm tablet:text-h2-md laptop:text-h2-lg xl:text-h2-xl text-white/90 font-serif"
      >
        The Location
      </h2>
      <div class="py-8">
        <div class="flex flex-col gap-y-3 pb-6">
          <h3 class="text-subtitle-lg uppercase text-dark-yellow">Address</h3>
          <p class="text-body-sm-serif font-serif text-white/80">
            Benar, 2 Madryn Terrace, Llanbedrog, <br /> Gwynedd, LL53 7PF
          </p>
        </div>
        <div class="flex flex-col gap-y-3 pb-6">
          <h3 class="text-subtitle-lg uppercase text-dark-yellow">Socials</h3>
          <div class="flex gap-x-5">
            <a
              class="flex relative text-white/80 hover:text-light-yellow fill-white/90 hover:fill-light-yellow transition-colors after:absolute after:w-full after:scale-x-0 after:h-0.5 after:-bottom-0.5 after:left-0 after:bg-light-yellow after:origin-bottom-right after:transition-transform after:duration-300 hover:after:scale-x-100 hover:after:origin-bottom-left"
              href="https://www.facebook.com/benarperfectstaycation"
            >
              <span class="inline-block pr-3">
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 16 16"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M1.45455 0C0.658909 0 0 0.658909 0 1.45455V14.5455C0 15.3411 0.658909 16 1.45455 16H14.5455C15.3411 16 16 15.3411 16 14.5455V1.45455C16 0.658909 15.3411 0 14.5455 0H1.45455ZM1.45455 1.45455H14.5455V14.5455H10.7724V9.63636H12.6589L12.9316 7.45455H10.7731V6.04509C10.7731 5.40945 10.9287 4.97745 11.8407 4.97745H13.0225V3C12.8211 2.97455 12.1222 2.93164 11.3185 2.93164C9.64218 2.93164 8.50036 3.94036 8.50036 5.81818V7.45455H6.59127V9.63636H8.49964V14.5455H1.45455V1.45455Z"
                  ></path>
                </svg>
              </span>
              <p class="text-body-sm-serif font-serif">Facebook</p>
            </a>
          </div>
        </div>
        <div class="flex flex-col gap-y-3">
          <h3 class="text-subtitle-lg uppercase text-dark-yellow">Email</h3>
          <p class="text-body-sm-serif font-serif">
            <a
              href="mailto:llanbedrogholidays@gmail.com"
              class="relative text-white/80 hover:text-light-yellow transition-colors after:absolute after:w-full after:scale-x-0 after:h-0.5 after:-bottom-0.5 after:left-0 after:bg-light-yellow after:origin-bottom-right after:transition-transform after:duration-300 hover:after:scale-x-100 hover:after:origin-bottom-left"
            >
              llanbedrogholidays@gmail.com</a
            >
          </p>
        </div>
      </div>
      <a
        href="https://www.abersochholidayhomes.co.uk/cottage/oc-24447-benar"
        target="_blank"
      >
        <Button intent="yellowSerif">Book Now</Button>
      </a>
    </div>

    <div
      class="relative hover:z-20 active:z-20 focus:z-20 -z-10 w-full laptop:w-2/3 h-[100vw] max-h-[500px] min-h-[300px] -mt-20 laptop:mb-20 ml-auto mr-0"
    >
      <div class="absolute w-full h-[100vw] max-h-[500px] laptop:pt-20">
        <iframe
          class="w-full h-[100vw] min-h-[300px] max-h-[500px]"
          style="border:0"
          loading="lazy"
          src=`https://www.google.com/maps/embed/v1/place?key=${apiKey}&q=2+Madryn+Ter&zoom=15`
        ></iframe>
      </div>
    </div>
  </div>
</div>
